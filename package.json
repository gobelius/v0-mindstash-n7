{
  "name": "mindstash-frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "analyze": "vite build --analyze",
    "build": "vite build && tsc",
    "check": "prettier --write . && eslint --fix",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules package-lock.json && npm install",
    "dev": "vite --port 3000",
    "dev:frontend-only": "vite --port 3000",
    "dev:full": "./dev-start.sh",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "format": "prettier",
    "format:check": "prettier --check src/",
    "format:write": "prettier --write src/",
    "lint": "eslint",
    "lint:fix": "eslint --fix src/",
    "serve": "vite preview",
    "start": "vite --port 3000",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-slot": "latest",
    "@rsbuild/core": "latest",
    "@tailwindcss/vite": "latest",
    "@tanstack/react-devtools": "^0.2.2",
    "@tanstack/react-query": "latest",
    "@tanstack/react-query-devtools": "latest",
    "@tanstack/react-router": "latest",
    "@tanstack/react-router-devtools": "latest",
    "@tanstack/router-plugin": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jiti": "latest",
    "less": "latest",
    "lightningcss": "latest",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "next-themes": "latest",
    "path": "latest",
    "react": "^19",
    "react-dom": "^19",
    "sass": "latest",
    "sass-embedded": "latest",
    "stylus": "latest",
    "sugarss": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^4.1.9",
    "tailwindcss-animate": "^1.0.7",
    "terser": "latest",
    "tsx": "latest",
    "vite-plugin-solid": "latest",
    "webpack": "latest",
    "yaml": "latest"
  },
  "devDependencies": {
    "@tanstack/eslint-config": "^0.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.0.0",
    "postcss": "^8.5",
    "prettier": "^3.5.3",
    "typescript": "^5",
    "vite": "^6.3.5",
    "vitest": "^3.0.5"
  }
}